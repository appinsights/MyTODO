</head>
<body>
    <div id="container">
        <div id="header">
            <div id="logo">
                <h1>
                    <a href="/">
                        <img src="@Url.Content("~/Content/images/header_logo.png")" width="241" height="121" alt="" />
                    </a>
                </h1>
            </div>
            <div id="toolbar">
                @if (IsSectionDefined("ToolbarContent"))
                {
                    @RenderSection("ToolbarContent", required: false)
                }
                else
                {
                    @Html.Partial("_LogOnPartial")
                }
                
            </div>
        </div>
        <div id="pageWrapper">
            <div id="page">
                <hr />
                <ul id="navigation">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("My Lists", "Index", "Todo")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    }
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                </ul>
                <hr />
                <div id="main">
                    @RenderSection("MainContent", required: false)
                </div>
            </div>
        </div>
        <div id="footer">
            <hr />
            <p class="copyright">
                &copy; 2012 Microsoft Corporation. All rights reserved.</p>
        </div>
        @RenderSection("ScriptsContent", required: false)
    </div>

</body>
</html>
